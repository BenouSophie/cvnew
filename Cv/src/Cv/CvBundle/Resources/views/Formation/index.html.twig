{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Formation list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Debut</th>
                <th>Fin</th>
                <th>Specialite</th>
                <th>Etablissement</th>
                <th>Diplome</th>
                <th>Annotation</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('formation_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{% if entity.debut %}{{ entity.debut|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if entity.fin %}{{ entity.fin|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ entity.specialite }}</td>
                <td>{{ entity.etablissement }}</td>
                <td>{{ entity.diplome }}</td>
                <td>{{ entity.annotation }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('formation_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('formation_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('formation_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
